<div class="max-w-screen-md mx-auto bg-gray-300 p-8 my-8 rounded shadow-lg">
  <form id="register-form" class= "flex flex-col" action="/register" method="POST">
    <input class="input input-email my-2 px-4" name="email" type="email" placeholder="Email">
    <input class="input input-username my-2 px-4"  name="username" type="text" placeholder="Username">
    <input class="input my-2 px-4" name="password" type="password" placeholder="Password">
    <input class="input my-2 px-4" name="verifyPassword" type="password" placeholder="Confirm Your Password">
    <button type="submit" class="my-3 bg-purple-400 hover:bg-purple-600 rounded-full border-solid border-2 border-white py-4 px-8 text-white font-bold text-sm">Sign up</button>
  </form>
</div>

<!-- Modal for displaying errors -->
<div class="fixed inset-0 flex items-center justify-center z-50 hidden" id="errorModal">
  <div class="bg-white rounded-lg p-8 shadow-md">
    <h3 class="text-lg font-semibold mb-4">Error</h3>
    <p id="errorText"></p>
    <button class="mt-4 px-4 py-2 bg-red-500 text-white rounded hover:bg-red-600" id="closeErrorModal">Close</button>
  </div>
</div>

<script>
  // Listen for the error response and show the modal
  document.addEventListener('DOMContentLoaded', () => {
    const errorText = '{{errorMessage}}';
    if (errorText) {
      document.getElementById('errorText').innerText = errorText;
      document.getElementById('errorModal').classList.remove('hidden');
    }
  });

  // Close the modal when the close button is clicked
  document.getElementById('closeErrorModal').addEventListener('click', () => {
    document.getElementById('errorModal').classList.add('hidden');
  });
</script>