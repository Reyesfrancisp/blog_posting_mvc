<div class=" flex justify-center">
  <div class="max-w-2xl bg-white rounded-lg px-4 mx-auto my-8 py-8 shadow-lg w-full sm:w-11/12 md:w-3/4 lg:w-1/2">
    <a href="/" class="inline-flex items-center justify-center px-6 py-3 ml-6 text-base font-bold text-white transition-colors duration-300 bg-gradient-to-r from-purple-500 to-blue-500 rounded-lg shadow-lg hover:from-purple-600 hover:to-blue-600 hover:shadow-xl">
      <svg class="w-5 h-5 mr-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M19 12H6M12 5l-7 7 7 7" />
      </svg>
      Back
    </a>
  <div class="my-8">
      <h2 class="text-2xl text-center md:text-3xl font-semibold text-gray-800">Create a new blog post today!</h2>
      <p class="text-center text-gray-600">Share your thoughts and ideas with the world.</p>
    </div>

    <form class="flex flex-col m-4 p-4" action="/entry" method="POST">
      <label for="title" class="text-lg font-semibold mb-2">Title:</label>
      <input class="uppercase border border-gray-300 rounded-md py-2 px-3 mb-4 focus:outline-none focus:border-blue-400" type="text" id="title" name="title" value="{{userPost.title}}">
      <label for="entry" class="text-lg font-semibold mb-2">Entry:</label>
      <textarea id="entry" name="entry" class="border border-gray-300 rounded-md py-2 px-3 h-40 resize-none focus:outline-none focus:border-blue-400">{{userPost.entry}}</textarea>
      <button type="submit" class="bg-green-500 hover:bg-green-600 text-white font-bold py-3 px-6 rounded-md shadow-md my-2 mx-8 transition-colors duration-300">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 inline-block mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M20 6L9 17l-5-5" />
        </svg>
        Submit
      </button>
    </form>
  </div>
</div>
